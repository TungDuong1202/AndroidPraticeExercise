<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_student_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:fitsSystemWindows="true">

    <!-- Tên Sinh Viên -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edt_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Name"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:imeOptions="actionNext"
        android:padding="10dp"/>

    <!-- Số Điện Thoại -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edt_student_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Phone Number"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:imeOptions="actionNext"
        android:padding="10dp"
        android:inputType="phone" />

    <!-- Địa Chỉ -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edt_student_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Address"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:imeOptions="actionNext"
        android:padding="10dp"/>

    <!-- Ngành Học -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edt_student_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Class"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:imeOptions="actionNext"
        android:padding="10dp"/>

    <!-- Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/edt_student_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student Email"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:inputType="textEmailAddress" />

    <!-- Nút Lưu -->
    <Button
        android:id="@+id/btn_save_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Student"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:backgroundTint="@color/purple_500"/>
</LinearLayout>